{
    "name": "portfolio",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev --host",
        "start": "astro dev --host",
        "build": "astro build",
        "preview": "astro preview",
        "astro": "astro",
        "precommit": "pnpm lint && pnpm format",
        "prepush": "pnpm build",
        "lint": "eslint --ext .js,.astro src",
        "format": "prettier --write . --plugin=prettier-plugin-astro",
        "typecheck": "tsc --noEmit",
        "cy:run": "cypress run",
        "test:e2e": "start-server-and-test start http://localhost:4321 cy:run",
        "test": "concurrently \"pnpm typecheck\" \"pnpm lint\" \"pnpm test:e2e\" -n \"Typecheck,Lint,Cypress\""
    },
    "engines": {
        "npm": "please-use-pnpm",
        "node": ">=18",
        "pnpm": ">=8",
        "yarn": "please-use-pnpm"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@astrojs/cloudflare": "^11.0.0",
        "@astrojs/react": "^3.6.3",
        "@astrojs/tailwind": "^5.1.5",
        "@types/react": "^18.3.24",
        "@types/react-dom": "^18.3.7",
        "astro": "^4.16.19",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwindcss": "^3.4.17"
    },
    "devDependencies": {
        "@commitlint/cli": "19.5.0",
        "@commitlint/config-conventional": "19.5.0",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "concurrently": "^9.2.1",
        "cypress": "^13.17.0",
        "eslint": "^9.35.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-astro": "^1.3.1",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-unicorn": "^61.0.2",
        "prettier": "^3.6.2",
        "prettier-plugin-astro": "^0.14.1",
        "start-server-and-test": "^2.1.0",
        "typescript": "5.9.2"
    }
}
