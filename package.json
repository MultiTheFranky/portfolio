{
    "name": "portfolio",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev --host",
        "start": "astro dev --host",
        "build": "astro build",
        "preview": "astro preview",
        "astro": "astro",
        "prepare": "husky install",
        "precommit": "pnpm lint && pnpm prettier",
        "prepush": "pnpm build",
        "lint": "eslint --ext .js,.astro src",
        "prettier": "prettier --write . --plugin=prettier-plugin-astro",
        "typecheck": "tsc --noEmit",
        "cy:run": "cypress run",
        "test:e2e": "start-server-and-test start http://localhost:4321 cy:run",
        "test": "concurrently \"pnpm typecheck\" \"pnpm lint\" \"pnpm test:e2e\" -n \"Typecheck,Lint,Cypress\""
    },
    "engines": {
        "npm": "please-use-pnpm",
        "node": ">=18",
        "pnpm": ">=8",
        "yarn": "please-use-pnpm"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@astrojs/cloudflare": "^11.1.0",
        "@astrojs/react": "^3.6.2",
        "@astrojs/tailwind": "^5.1.2",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1",
        "astro": "^4.16.6",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwindcss": "^3.4.13"
    },
    "devDependencies": {
        "@commitlint/cli": "19.5.0",
        "@commitlint/config-conventional": "19.5.0",
        "@typescript-eslint/parser": "^6.21.0",
        "concurrently": "^9.0.1",
        "cypress": "^13.15.0",
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-astro": "^1.3.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "5.2.1",
        "eslint-plugin-unicorn": "^56.0.0",
        "husky": "^9.1.6",
        "prettier": "^3.3.3",
        "prettier-plugin-astro": "^0.14.1",
        "start-server-and-test": "^2.0.8",
        "typescript": "^5.6.2"
    }
}
