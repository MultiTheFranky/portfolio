---
import Layout from "../layouts/Layout.astro";
type Social = {
    name: string;
    icon: string;
    link: string;
};

const socials: Social[] = [
    {
        name: "Github",
        icon: "/socials/github.svg",
        link: "https://github.com/multithefranky"
    },
    {
        name: "Linkedin",
        icon: "/socials/linkedin.svg",
        link: "https://www.linkedin.com/in/franciscoalamogarcia/"
    },
    {
        name: "X",
        icon: "/socials/x.svg",
        link: "https://x.com/multithefranky"
    },
    {
        name: "Instagram",
        icon: "/socials/instagram.svg",
        link: "https://www.instagram.com/multithefranky/"
    },
    {
        name: "Twitch",
        icon: "/socials/twitch.svg",
        link: "https://www.twitch.tv/frankyscripter"
    },
    {
        name: "Youtube",
        icon: "/socials/youtube.svg",
        link: "https://www.youtube.com/channel/UCWWoFj78QojfXnCv4fNddVg"
    }
];
---

<style>
    .text-gradient {
        background: linear-gradient(270deg, #fff, #00b1bb, #0d0950);
        background-size: 600% 600%;

        -webkit-animation: Title 30s ease infinite;
        -moz-animation: Title 30s ease infinite;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: Title 30s ease infinite;
        background-size: 400%;
        background-position: 0%;
    }

    @-webkit-keyframes Title {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    @-moz-keyframes Title {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    @keyframes Title {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
</style>
<Layout title="About">
    <main class="grid h-full place-items-center px-6 py-12 sm:py-20 lg:px-8">
        <div class="w-full max-w-3xl">
            <section
                class="bg-transparent rounded-lg overflow-hidden flex flex-col sm:flex-row items-stretch gap-4 reveal profile-card"
                style="--delay:0ms"
            >
                <div
                    class="profile-image h-48 sm:h-auto sm:w-48 flex-none bg-cover rounded-t sm:rounded-t-none sm:rounded-l text-center overflow-hidden"
                    style="background-image: url('/about.png')"
                    title="MultiTheFranky"
                >
                </div>

                <div class="p-4 flex flex-col justify-between leading-normal">
                    <div>
                        <h1 class="font-bold text-2xl sm:text-xl mb-2">
                            <span
                                class="inline name-reveal"
                                style="animation-delay: 0.2s"
                                >Francisco&nbsp;</span
                            >
                            <span
                                class="inline text-gradient name-reveal"
                                style="animation-delay: 0.4s"
                                aria-hidden="true">Franky</span
                            >
                            <span class="sr-only">Franky</span>
                            <span
                                class="inline name-reveal"
                                style="animation-delay: 0.6s"
                            >
                                Álamo García</span
                            >
                        </h1>
                        <p class="text-base bio-text">
                            Born in Santander, Spain, in 1997. I've studied
                            computer science at the University of Cantabria. I
                            am passionate about technology and I love to learn
                            new things. I am a very curious person and I like to
                            know about everything. Working for Incentro.
                            Grandvision support team and Casashops support and
                            developer.
                        </p>
                        <p class="text-base mt-6 italic quote-text">
                            "Jack of all trades, master of some"
                        </p>
                    </div>
                </div>
            </section>

            <section class="mt-8 reveal" style="--delay:180ms">
                <h2
                    class="text-center text-3xl sm:text-4xl font-semibold leading-8 section-title"
                >
                    Social
                </h2>
                <div
                    class="mx-auto mt-6 grid max-w-lg grid-cols-3 sm:grid-cols-6 gap-6 items-center justify-items-center"
                >
                    {
                        socials.map((item, i) => (
                            <a
                                href={item.link}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="social-card flex flex-col items-center transform transition-transform duration-200"
                                style={`--delay:${220 + i * 40}ms; --index: ${i}`}
                                aria-label={`${item.name} (opens in a new tab)`}
                            >
                                <div class="social-icon-wrapper">
                                    <img
                                        src={item.icon}
                                        alt=""
                                        aria-hidden="true"
                                        class="social-icon h-12 w-12 rounded-md object-contain shadow-sm dark:invert"
                                        loading="lazy"
                                        decoding="async"
                                        width="48"
                                        height="48"
                                    />
                                </div>
                                <span class="mt-2 text-sm font-medium social-name">
                                    {item.name}
                                </span>
                                <span class="sr-only">
                                    Open {item.name} in a new tab
                                </span>
                            </a>
                        ))
                    }
                </div>
            </section>
        </div>

        <style>
            /* Profile card enhancements */
            .profile-card {
                position: relative;
                border: 1px solid rgba(0, 177, 187, 0.2);
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .profile-card::before {
                content: "";
                position: absolute;
                inset: -2px;
                background: linear-gradient(
                    45deg,
                    #00b1bb,
                    #0d0950,
                    #00b1bb,
                    #0d0950
                );
                background-size: 400% 400%;
                border-radius: inherit;
                z-index: -1;
                opacity: 0;
                animation: border-rotate 4s linear infinite;
                transition: opacity 0.3s ease;
            }

            .profile-card:hover::before {
                opacity: 0.6;
            }

            @keyframes border-rotate {
                0% {
                    background-position: 0% 50%;
                }
                50% {
                    background-position: 100% 50%;
                }
                100% {
                    background-position: 0% 50%;
                }
            }

            .profile-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 25px 50px rgba(0, 177, 187, 0.15);
            }

            /* Profile image effects */
            .profile-image {
                position: relative;
                transition: all 0.4s ease;
            }

            .profile-image::after {
                content: "";
                position: absolute;
                inset: 0;
                background: linear-gradient(
                    135deg,
                    rgba(0, 177, 187, 0.2),
                    transparent
                );
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .profile-card:hover .profile-image::after {
                opacity: 1;
            }

            .profile-card:hover .profile-image {
                transform: scale(1.02);
            }

            /* Name reveal animation */
            .name-reveal {
                opacity: 0;
                animation: name-fade-in 0.6s ease-out forwards;
            }

            @keyframes name-fade-in {
                from {
                    opacity: 0;
                    transform: translateY(10px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            /* Bio text animation */
            .bio-text {
                opacity: 0;
                animation: bio-reveal 0.8s ease-out 0.8s forwards;
            }

            @keyframes bio-reveal {
                from {
                    opacity: 0;
                    transform: translateX(-20px);
                }
                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }

            /* Quote animation */
            .quote-text {
                opacity: 0;
                animation: quote-reveal 0.8s ease-out 1.2s forwards;
                position: relative;
            }

            .quote-text::before {
                content: "";
                position: absolute;
                left: -10px;
                top: 0;
                bottom: 0;
                width: 3px;
                background: linear-gradient(180deg, #00b1bb, #0d0950);
                transform: scaleY(0);
                animation: quote-line 0.5s ease-out 1.5s forwards;
            }

            @keyframes quote-reveal {
                from {
                    opacity: 0;
                }
                to {
                    opacity: 1;
                }
            }

            @keyframes quote-line {
                to {
                    transform: scaleY(1);
                }
            }

            /* Section title */
            .section-title {
                background: linear-gradient(135deg, #64748b, #00b1bb, #64748b);
                background-size: 200% auto;
                -webkit-background-clip: text;
                background-clip: text;
                -webkit-text-fill-color: transparent;
                animation: shimmer-title 4s linear infinite;
            }

            :global(.dark) .section-title {
                background: linear-gradient(135deg, #94a3b8, #00b1bb, #94a3b8);
                background-size: 200% auto;
                -webkit-background-clip: text;
                background-clip: text;
            }

            @keyframes shimmer-title {
                0% {
                    background-position: -100% 0;
                }
                100% {
                    background-position: 100% 0;
                }
            }

            /* Social card animations */
            .social-card {
                position: relative;
                padding: 1rem;
                border-radius: 1rem;
                opacity: 0;
                animation: social-reveal 0.5s ease-out forwards;
                animation-delay: calc(var(--index) * 100ms + 400ms);
            }

            @keyframes social-reveal {
                from {
                    opacity: 0;
                    transform: translateY(20px) scale(0.9);
                }
                to {
                    opacity: 1;
                    transform: translateY(0) scale(1);
                }
            }

            .social-card::before {
                content: "";
                position: absolute;
                inset: 0;
                border-radius: 1rem;
                background: radial-gradient(
                    circle at center,
                    rgba(0, 177, 187, 0.15),
                    transparent
                );
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .social-card:hover::before {
                opacity: 1;
            }

            .social-card:hover {
                transform: translateY(-10px) scale(1.1) !important;
            }

            .social-icon-wrapper {
                position: relative;
            }

            .social-icon-wrapper::after {
                content: "";
                position: absolute;
                inset: -8px;
                background: radial-gradient(
                    circle,
                    rgba(0, 177, 187, 0.4) 0%,
                    transparent 70%
                );
                border-radius: 50%;
                opacity: 0;
                transform: scale(0.8);
                transition: all 0.3s ease;
            }

            .social-card:hover .social-icon-wrapper::after {
                opacity: 1;
                transform: scale(1);
            }

            .social-icon {
                position: relative;
                z-index: 1;
                transition: all 0.3s ease;
            }

            .social-card:hover .social-icon {
                transform: rotate(10deg) scale(1.1);
                filter: drop-shadow(0 5px 15px rgba(0, 177, 187, 0.4));
            }

            .social-name {
                transition: all 0.3s ease;
            }

            .social-card:hover .social-name {
                color: #00b1bb;
            }

            /* re-use reveal styles similar to timeline */
            .reveal {
                opacity: 0;
                transform: translateY(10px) scale(0.995);
                transition:
                    opacity 520ms cubic-bezier(0.2, 0.9, 0.2, 1) var(--delay),
                    transform 520ms cubic-bezier(0.2, 0.9, 0.2, 1) var(--delay);
            }
            .reveal.in-view {
                opacity: 1;
                transform: translateY(0) scale(1);
            }

            /* subtle hover accessibility */
            a[rel~="noopener"]:focus {
                outline: 2px solid rgba(59, 130, 246, 0.4);
                outline-offset: 2px;
            }

            @media (max-width: 639px) {
                .text-gradient {
                    font-size: 1.1em;
                }
            }
        </style>

        <script type="module">
            if (typeof window !== "undefined") {
                const prefersReduced = window.matchMedia(
                    "(prefers-reduced-motion: reduce)"
                ).matches;
                if (prefersReduced) {
                    document
                        .querySelectorAll(".reveal")
                        .forEach((el) => el.classList.add("in-view"));
                } else {
                    const obs = new IntersectionObserver(
                        (entries) => {
                            entries.forEach((e) => {
                                if (e.isIntersecting) {
                                    e.target.classList.add("in-view");
                                    obs.unobserve(e.target);
                                }
                            });
                        },
                        { threshold: 0.12 }
                    );

                    document
                        .querySelectorAll(".reveal")
                        .forEach((el) => obs.observe(el));
                }
            }
        </script>
    </main>
</Layout>
