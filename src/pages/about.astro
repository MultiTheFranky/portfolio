---
import Layout from "../layouts/Layout.astro";
type Social = {
    name: string;
    icon: string;
    link: string;
};

const socials: Social[] = [
    { name: "Github", icon: "/socials/github.svg", link: "https://github.com/multithefranky" },
    { name: "Linkedin", icon: "/socials/linkedin.svg", link: "https://www.linkedin.com/in/franciscoalamogarcia/" },
    { name: "Twitter", icon: "/socials/twitter.svg", link: "https://twitter.com/multithefranky" },
    { name: "Instagram", icon: "/socials/instagram.svg", link: "https://www.instagram.com/multithefranky/" },
    { name: "Twitch", icon: "/socials/twitch.svg", link: "https://www.twitch.tv/frankyscripter" },
    { name: "Youtube", icon: "/socials/youtube.svg", link: "https://www.youtube.com/channel/UCWWoFj78QojfXnCv4fNddVg" }
];
---

<style>
    .text-gradient {
        background: linear-gradient(270deg, #fff, #00b1bb, #0d0950);
        background-size: 600% 600%;

        -webkit-animation: Title 30s ease infinite;
        -moz-animation: Title 30s ease infinite;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: Title 30s ease infinite;
        background-size: 400%;
        background-position: 0%;
    }

    @-webkit-keyframes Title {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    @-moz-keyframes Title {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    @keyframes Title {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
</style>
<Layout title="About">
    <main class="grid h-full place-items-center px-6 py-12 sm:py-20 lg:px-8">
        <div class="w-full max-w-3xl">
            <section class="bg-transparent rounded-lg overflow-hidden flex flex-col sm:flex-row items-stretch gap-4 reveal" style="--delay:0ms">
                <div
                    class="h-48 sm:h-auto sm:w-48 flex-none bg-cover rounded-t sm:rounded-t-none sm:rounded-l text-center overflow-hidden"
                    style="background-image: url('/about.png')"
                    title="MultiTheFranky"
                />

                <div class="p-4 flex flex-col justify-between leading-normal">
                    <div>
                        <h1 class="font-bold text-2xl sm:text-xl mb-2">
                            <span class="inline">Francisco&nbsp;</span>
                            <span class="inline text-gradient" aria-hidden="true">Franky</span>
                            <span class="sr-only">Franky</span>
                            <span class="inline"> Álamo García</span>
                        </h1>
                        <p class="text-base">
                            Born in Santander, Spain, in 1997. I've studied computer
                            science at the University of Cantabria. I am passionate
                            about technology and I love to learn new things. I am a
                            very curious person and I like to know about everything.
                            Working for Incentro. Grandvision support team and
                            Casashops support and developer.
                        </p>
                        <p class="text-base mt-6 italic">"Jack of all trades, master of some"</p>
                    </div>
                </div>
            </section>

            <section class="mt-8 reveal" style="--delay:180ms">
                <h2 class="text-center text-3xl sm:text-4xl font-semibold leading-8">Social</h2>
                <div class="mx-auto mt-6 grid max-w-lg grid-cols-3 sm:grid-cols-6 gap-6 items-center justify-items-center">
                    {
                        socials.map((item, i) => (
                            <a
                                href={item.link}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex flex-col items-center transform transition-transform duration-200 hover:scale-105 focus:scale-105"
                                style={`--delay:${220 + i * 40}ms`}
                                aria-label={`${item.name} (opens in a new tab)`}
                            >
                                <img
                                    src={item.icon}
                                    alt=""
                                    aria-hidden="true"
                                    class="h-12 w-12 rounded-md object-contain shadow-sm"
                                    loading="lazy"
                                    decoding="async"
                                    width="48"
                                    height="48"
                                />
                                <span class="mt-2 text-sm font-medium">{item.name}</span>
                                <span class="sr-only">Open {item.name} in a new tab</span>
                            </a>
                        ))
                    }
                </div>
            </section>
        </div>

        <style>
            /* re-use reveal styles similar to timeline */
            .reveal { opacity: 0; transform: translateY(10px) scale(0.995); transition: opacity 520ms cubic-bezier(.2,.9,.2,1) var(--delay), transform 520ms cubic-bezier(.2,.9,.2,1) var(--delay); }
            .reveal.in-view { opacity: 1; transform: translateY(0) scale(1); }

            /* subtle hover accessibility */
            a[rel~="noopener"]:focus { outline: 2px solid rgba(59,130,246,0.4); outline-offset: 2px; }

            @media (max-width: 639px) {
                .text-gradient { font-size: 1.1em; }
            }
        </style>

        <script type="module">
            if (typeof window !== 'undefined') {
                const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
                if (prefersReduced) {
                    document.querySelectorAll('.reveal').forEach(el => el.classList.add('in-view'));
                } else {
                    const obs = new IntersectionObserver((entries) => {
                        entries.forEach(e => {
                            if (e.isIntersecting) {
                                e.target.classList.add('in-view');
                                obs.unobserve(e.target);
                            }
                        });
                    }, { threshold: 0.12 });

                    document.querySelectorAll('.reveal').forEach((el) => obs.observe(el));
                }
            }
        </script>
    </main>
</Layout>
