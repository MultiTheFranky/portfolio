    <style>
        .footer-container {
            position: relative;
            overflow: hidden;
        }

        .footer-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 1px;
            background: linear-gradient(
                90deg,
                transparent,
                rgba(0, 177, 187, 0.5),
                transparent
            );
            animation: footer-line-slide 8s linear infinite;
        }

        @keyframes footer-line-slide {
            0% {
